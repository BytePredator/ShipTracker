<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.univaq.byte_predator.shiptracker">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Helper.HelperAC"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBcYMSf_P4_PSoeVO8BMuxG2eoF75Jaums"/>


        <activity
            android:name=".Controllers.Main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.Track.ViewTrackActivity"
            android:parentActivityName=".Controllers.Main.MainActivity">
        </activity>
        <activity
            android:name=".Controllers.Track.NewTrackActivity"
            android:parentActivityName=".Controllers.Main.MainActivity">
        </activity>
        <activity
            android:name=".Controllers.Race.ViewRaceActivity"
            android:parentActivityName=".Controllers.Track.ViewTrackActivity">
        </activity>
        <activity
            android:name=".Controllers.Race.NewRaceActivity"
            android:parentActivityName=".Controllers.Track.ViewTrackActivity">
        </activity>
        <service android:name=".Helper.HelperService"/>
    </application>

</manifest>