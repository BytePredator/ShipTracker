<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionModeStyle">@style/styleActionMode</item>
    </style>
    <style name="item_name">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="item_label">
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="dialog_label">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <style name="styleActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorAlternative</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
    </style>
</resources>
